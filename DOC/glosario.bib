@GLOSSDEF{fotorealistas,
    word = "Imagen foto-realista.",
    definition ="Imagen que no se puede distinguir de otra que ha sido generada por una cámara fotográfica."
}

@GLOSSDEF{radiancia,
    word = "Radiancia.",
    definition ="Flujo radiante por unidad de ángulo sólido, que sale de una superficie emisora en una dirección dada, por unidad de área en esa dirección. Se corresponde con el concepto de brillo."
}

@GLOSSDEF{reflexion,
    word = "Reflexión.",
    definition ="Fenómeno por el cual un rayo de luz que incide sobre una superficie es reflejado."
}

@GLOSSDEF{refraccion,
    word = "Refracción.",
    definition ="Fenómeno por el cual un rayo de luz cambia de dirección al pasar de un medio material a otro."
}

@GLOSSDEF{foton,
    word = "Fotón.",
    definition ="Partícula elemental responsable de las manifestaciones cuánticas del fenómeno electromagnético. Es la partícula portadora de todas las formas de radiación electromagnética, incluyendo a la luz visible."
}

@GLOSSDEF{caneland,
    word = "Caneland.",
    definition ="Plataforma multiprocesador para servidor creada por Intel, especialmente diseñada para ofrecer alto desempeño a través de una interconexión de alta velocidad entre 4 microprocesadores."
}

@GLOSSDEF{dunnington,
    word = "Dunnington.",
    definition ="Microprocesador creado por Intel de 6 cores (3 parejas de Dual Core) y acompañados por una cache L3 de 16Mb compartida y 3Mb de caché L2 para cada uno."
}
